---
import NavigationItem from "../../components/NavigationItem.astro";
import SearchBar from "../../components/SearchBar";

const currentPath = decodeURIComponent(Astro.url.pathname).replace(/(.+)(\/|\.html)$/, "$1");
---

<header
  id="app-header"
  class="fixed top-0 z-[99] h-24 w-dvw select-none border-b border-b-secondary-200 bg-white pl-[env(safe-area-inset-left)] pr-[env(safe-area-inset-right)] font-sans md:h-16 md:text-sm dark:border-b-neutral-600 dark:bg-neutral-800"
>
  <nav
    aria-label="Menu principal"
    class="grid h-full grid-cols-12 max-md:grid-flow-row-dense md:px-3 lg:px-6"
  >
    <div
      class="col-span-6 flex h-12 items-center max-md:pl-3 md:col-span-2 md:h-auto xl:col-span-2"
    >
      <a
        href="/"
        class="relative -left-1.5 rounded-lg border border-transparent px-1.5 pb-0.5 pt-1 font-serif text-xl tracking-wider outline-none transition-[border-color_shadow] hover:border-neutral-300 hover:shadow-md md:pb-1 md:pt-1.5 lg:-left-3 lg:px-3 dark:duration-0 dark:hover:border-neutral-500 dark:hover:transition-[border-color_shadow]"
      >
        Bailly.app
      </a>
    </div>

    <div
      class="col-span-full h-[calc(theme(height.12)-1px)] w-full place-self-center border-x-secondary-200 border-t-neutral-200 max-md:border-t md:col-span-8 md:mx-0 md:h-full md:max-w-[calc(theme(screens.sm)+theme(spacing.12))] md:border-x xl:col-span-6 dark:border-x-neutral-600 dark:border-t-neutral-600"
    >
      <SearchBar
        client:only="solid-js"
        transition:persist
        transition:persist-props
      />
    </div>

    <div
      class="col-span-6 flex h-12 items-center justify-end gap-x-4 font-semibold max-md:pr-3 md:col-span-2 md:h-auto xl:col-span-4 xl:gap-x-7"
    >
      <!--<NavigationItem
        ariaLabel="Explorer"
        icon="BookOpen"
        isActive={currentPath === "/explorer"}
        href="/explorer"
        name="Explorer"
      />-->
      <NavigationItem
        ariaLabel="Signets"
        icon="Bookmark"
        isActive={currentPath === "/signets"}
        href="/signets"
        name="Signets"
      />
      <NavigationItem
        ariaLabel="Paramètres"
        icon="AdjustmentsHorizontal"
        isActive={currentPath === "/paramètres"}
        href="/paramètres"
        name="Paramètres"
      />
      <NavigationItem
        ariaLabel="À propos"
        icon="InformationCircle"
        isActive={currentPath === "/à-propos"}
        href="/à-propos"
        name="À propos"
      />
    </div>
  </nav>
</header>
